{
	"version": "2.0.0",

	"tasks": [
		{
			"windows": {
				"command": "C:\\msys64\\usr\\bin\\bash.exe",
				"args": ["./cli_build.sh"],
				"options": {
					"env": {
						"PATH": "C:\\msys64\\usr\\bin;C:\\msys64\\mingw64\\bin",
					},
				},
			},
			"linux": {
				"args": ["-lc", "cd \"\"${workspaceRoot}\"\" && rm -r builddir && ([ -f builddir/build.ninja ] || meson builddir) && ninja -C builddir && cd builddir && meson install && $@"],
				"command": "/bin/bash"
			},
			"options": {
				"env": {
					"LANG": "C.UTF-8",
					"PYTHONUNBUFFERD": "1",
					"MSYSTEM": "MINGW64",
					"CHERE_INVOKING": "1"
				}
			},
			"label": "build",
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"relative",
					"${workspaceRoot}/builddir"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|fatal error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},



		{
            "label": "cppcheck",
            "group": "build",
            "type": "shell",
            "command": "cppcheck --template=gcc -isrc/deps --enable=warning --std=c++17 --force .",
            "problemMatcher": {
                "fileLocation": "relative",
                "severity": "warning",
                "pattern":{
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },


		{
			"windows": {
				"command": "C:\\msys64\\usr\\bin\\bash.exe",
				"args": ["-lc", "rm -r builddir &&([ -f builddir/build.ninja ] || CC=gcc CXX=g++ CC_LD=g++ meson setup builddir && meson builddir && cd builddir && meson install) && ninja -C builddir | cat"]
			},
			"linux": {
				"args": ["-lc", "cd \"\"${workspaceRoot}\"\" && rm -r builddir && ([ -f builddir/build.ninja ] || meson builddir) && ninja -C builddir && cd builddir && meson install && $@"],
				"command": "/bin/bash"
			},
			"options": {
				"env": {
					"LANG": "C.UTF-8",
					"PYTHONUNBUFFERD": "1",
					"MSYSTEM": "MINGW64",
					"CHERE_INVOKING": "1"
				}
			},
			"label": "builddbg",
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"relative",
					"${workspaceRoot}/builddir"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|fatal error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "none",
				"isDefault": true
			}
		}
	]
}